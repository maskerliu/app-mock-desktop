{
    "compilerOptions": {
      "module": "esNext",
      "target": "es6",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "strictFunctionTypes": false,
      "suppressExcessPropertyErrors": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noImplicitThis": false,
      "lib": [
        "dom",
        "es5",
        "es2015",
        "es2016",
        "es2017.object"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": true
  }
  